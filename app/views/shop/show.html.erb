
	<div class="dashboard-main">
	  <div class="container">
		<% if current_user %>
			<% if current_user.id == @shop[:user_id]%>
		<h1>Bonjour <%= current_user.username%>, bienvenue sur votre bureau! </h1>
		<h3>Ici, vous pouvez gérer votre profil en temps réél.</h3>
		<% end%>
		<% else%>
		<h1> Bonjour, voici l'épicerie <h1>
		<h3>Ici, vous pouvez  consulter les horaires en temps réél.</h3>
	<%end%>

		<div class="dashboard">
			<div class="row">
			<div class="dashboard-left col-6">
				<h2><%= @shop.title%></h2>
				<h4><%= @shop.adress%></h4>
				<% if @shop.frontpicture.attached? %>
					<%= image_tag @shop.frontpicture, class:"dashboard-image" %>
				<% end %><br>
				<br>
		<% if current_user %>
			<% if current_user.id == @shop[:user_id] %>
				<h6>Modifiez votre image ci-dessous</h6>
				<%= form_for @shop, url: {action: "update"}, html: {class: "nifty_form"} do |f| %>
				<%= f.file_field :frontpicture, class:"btn btn-outline-dark" %>
				<%= f.submit "Upload", class:"btn btn-outline-dark" %>
				<% end %>
			<% end %>	
				
			<%end %>
			<br>
		<% if current_user %>
				<% if current_user.id == @shop[:user_id] %>
					<%= link_to "Modifiez", edit_shop_path(@shop.id),class:"btn btn-outline-dark" %>
					<%= link_to "Suprimer l'épicerie" , @shop, :method => 'delete', data: { confirm: "Êtes-vous sur de vouloir fermer votre épicerie ? Elle disparaitra de la carte !" }, class:"btn btn-outline-dark" %>
				<%end %>
			<% end %>

			</div>

			<div class="dashboard-right jumbotron col-6 col-md-6 col-md-offset-1">
				<br><br>
				<% @hours = @hours.sort_by {|h| h[:day]}%>
				<% @hours.map do |h| %><br>
					<%if h[:open] == nil %>
						<p><em>fermée le <%=h[:name_of_day]%></em></p>
					<%else%>
						<%=h[:name_of_day]%>
						<% string = h[:open].to_s %>
						Horaires d'ouverture:<%= string[10..15] %>
						<% string = h[:close].to_s %>
						Horaire de fermeture:<%= string[10..15] %>
					<%end%>
				<%end%><br><br><br>

		<% if current_user %>
			<% if current_user.id == @shop[:user_id]%>
				 
				<p><em>Si vous êtes l'épicier:</em> </p>
				<h6><%= link_to "Modifier les horaires", shop_operating_hours_path(params[:id]), class:"btn btn-outline-dark" %> </h6>
			<%end%>
			<%end%>
			</div>

		</div>
		</div>
	  </div>
	</div>
